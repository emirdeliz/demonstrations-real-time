{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@atoms": [
        "src/ui/atoms"
      ],
      "@molecules": [
        "src/ui/molecules"
      ],
      "@organisms": [
        "src/ui/organisms"
      ],
      "@components": [
        "src/ui/components"
      ],
      "@theme": [
        "src/ui/system/theme"
      ],
      "@i18n": [
        "src/ui/system/i18n"
      ],
      "@pages": [
        "src/ui/pages"
      ],
      "@stories": [
        "src/ui/stories"
      ],
      "@hooks": [
        "src/hooks"
      ],
      "@helpers": [
        "src/helpers"
      ],
      "@types": [
        "src/types"
      ],
      "@utils": [
        "src/utils"
      ],
      "@test": [
        "test"
      ]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
